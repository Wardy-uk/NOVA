<?xml version="1.0" encoding="utf-8"?>
<!--
  IIS URL Rewrite configuration for N.O.V.A DayPilot.
  Place this file in the IIS site's physical root directory.
  Requires: URL Rewrite module + Application Request Routing (ARR) with proxy enabled.
-->
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <rule name="ReverseProxyToNode" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <!-- Don't rewrite requests for static files that IIS can serve directly (optional optimisation) -->
          </conditions>
          <action type="Rewrite" url="http://127.0.0.1:3069/{R:1}" />
        </rule>
      </rules>
    </rewrite>
    <!-- Increase default timeout for long-running API calls (MCP sync, AI) -->
    <proxy timeout="00:02:00" />
  </system.webServer>
</configuration>
